---
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import ArrowSeparator from "../components/ui/separator/ArrowSeparator.astro";
import GlowLineSeparator from "../components/ui/separator/GlowLineSeparator.astro";
import PhotoCarousel from "@/components/ui/PhotoCarousel/PhotoCarousel.astro";
import Footer from "@/components/ui/elements/Footer.astro";
import Header from "@/components/ui/elements/Header.astro";
import HeroSection from "@/components/ui/elements/HeroSection.astro";
import BaseHead from "@/components/ui/elements/BaseHead.astro";
import PortfolioSection from "@/components/sections/PortfolioSection.astro";
import AdvantageSection from "@/components/sections/AdvantageSection.astro";

// skills are imported from src/data/skills
---

<!doctype html>
<html lang="sk" data-theme="dark" class="dark">
  <head>
 
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <!-- JSON-LD: Organization -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Organization",
        name: "Site Author",
        url: new URL("/", Astro.site).toString(),
        logo: new URL("/favicon.svg", Astro.site).toString(),
        sameAs: ["https://blacklabs.sk"],
      })}
    />
  </head>
  <body>
    <Header />
    <main>
      <HeroSection
        title="Smart domácnosť od BlackLabs"
        subtitle="Pozdvihnite svoj domov na novú úroveň za bezkonkurenčnú cenu"
        showCTA
        primaryCTA={{ text: "Prezerať možnosti", href: "/portfolio" }}
        secondaryCTA={{
          text: "Systém HomeAssistant a jeho výhody",
          href: "/advantages",
        }}
      />

      <section class="py-6">
        <div class="mb-6">
          <PhotoCarousel />
        </div>
        <ArrowSeparator />
        <PortfolioSection title="Oblasti použitia" />
        <ArrowSeparator />
        <AdvantageSection title="Výhody smart domácnosti" />
        <ArrowSeparator />
        <GlowLineSeparator />
      </section>
    </main>
    <Footer />
  </body>
</html>
