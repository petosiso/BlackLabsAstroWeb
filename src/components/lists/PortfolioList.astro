---
 import { portfolioData } from "../../data/portfolio";

interface Props {
  itemsCount: number;
  includeNotes: boolean;
  centered: boolean;
}
const props = Astro.props as Props;
---

{
  portfolioData.slice(0, props.itemsCount).map((p) => (
    <article
      class={`card-surface p-6 relative ${props.centered ? "flex flex-col items-center text-center" : ""}`}
    >
      <div
        class={`w-full flex  text-[var(--accent)] [&>svg]:w-8 [&>svg]:h-8  ${props.centered ? "justify-center" : "justify-end"}`}
        set:html={p.icon}
      />
      <h3 class="text-xl font-semibold text-foreground m-0">{p.title}</h3>
      <p class="text-sm text-[color:var(--color-text-muted)] m-0">
        {p.techStack}
      </p>
      <p class="mt-3 text-[color:var(--color-text-secondary)]">
        {p.description}
      </p>

      {props.includeNotes && (
        <div>
          <p class="mt-3 text-[color:var(--color-text-muted)]">
            {"Príklady použitia:"}
          </p>
          <p class="mt-3 text-[color:var(--color-text-primary)]">
            {p.notes.map((note) => (
              <li class="mt-1 text-[color:var(--color-primary)] list-disc ml-5">
                {note}
              </li>
            ))}
          </p>
        </div>
      )}
    </article>
  ))
}
