---
import Button from "../ui/button/Button.astro";
import AdvantageList from "../lists/AdvantageList.astro";
import { fade } from "astro:transitions";
  
interface ExperienceItem {
  title: string;
  prompt: string;
  description: string;
  technologies?: string[];
  notes: string[];
}

interface Props {
   title?: string;
}

const {  title } = Astro.props as Props;
---

<section class="w-full py-8">
  <div class="mx-auto max-w-6xl px-2 md:px-6">
    {
      title && (
        <h2 class="text-3xl pb-10 md:text-4xl font-semibold text-center mb-10 text-foreground">
          {title}
        </h2>
      )
    }

    <AdvantageList
      itemsCount={5}
      centered={false}
      allOpen={false}
    />

    <div class="mt-8 mb-8 flex items-center justify-center gap-3">
      <Button href={"/advantages"} variant="primary" size="lg"
        >{"Preskúmať viac výhod"}</Button
      >
    </div>
  </div>
</section>
