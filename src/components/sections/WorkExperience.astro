---
import Timeline from "../ui/timeline/Timeline.astro";
import { workIcons } from "../../data/work";
import Button from "../ui/button/Button.astro";

interface ExperienceItem {
  title: string;
  prompt: string;
  description: string;
  technologies?: string[];
  notes: string[];
}

interface Props {
  items: ExperienceItem[];
  title?: string;
}

const { items, title } = Astro.props as Props;
---

<section class="w-full py-8">
  <div class="mx-auto max-w-6xl px-5 md:px-6">
    {
      title && (
        <h2 class="text-3xl md:text-4xl font-semibold text-center mb-10 text-foreground">
          {title}
        </h2>
      )
    }

    <Timeline
      items={items.slice(0, 7)}
      icons={workIcons}
      centered={false}
      includeNotes={false}
    />

    <div class="mt-8 mb-8 flex items-center justify-center gap-3">
      <Button href={"/homeassistant"} variant="primary" size="lg"
        >{"Preskúmať viac výhod"}</Button
      >
    </div>
  </div>
</section>
