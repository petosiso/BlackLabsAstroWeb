---
import Button from "../ui/button/Button.astro";
import { projects } from "../../data/projects";

interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<section class="w-full py-10">
  <div class="mx-auto max-w-6xl px-4">
    {
      title && (
        <h2 class="text-3xl md:text-4xl font-semibold text-center mb-8 text-foreground">
          {title}
        </h2>
      )
    }

    <div class="grid grid-cols-1 md:grid-cols-1 gap-6">
      {
        projects.map((p) => (
          <article class="card-surface p-6 relative">
            <div
              class="absolute right-4 top-4 text-[var(--accent)] [&>svg]:w-6 [&>svg]:h-6"
              set:html={p.icon}
            />
            <h3 class="text-xl font-semibold text-foreground m-0">{p.title}</h3>
            <p class="text-sm text-[color:var(--color-text-muted)] m-0">
              {p.techStack}
            </p>
            <p class="mt-3 text-[color:var(--color-text-secondary)]">
              {p.description}
            </p>
            <p class="mt-3 text-[color:var(--color-text-muted)]">
              {"Príklady použitia:"}
            </p>
            <p class="mt-3 text-[color:var(--color-text-primary)]">
              {p.notes.map((note) => (
                <li class="mt-1 text-[color:var(--color-primary)] list-disc ml-5">
                  {note}
                </li>
              ))}
            </p>
          </article>
        ))
      }
    </div>
  </div>
</section>
