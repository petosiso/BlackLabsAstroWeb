---
 import PortfolioList from "../lists/PortfolioList.astro";
import Button from "../ui/button/Button.astro";
interface SkillItem {
  icon: string; // inline SVG
  title: string;
  description: string;
}

interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
---

<section class="w-full py-8">
  <div class="mx-auto max-w-6xl px-4">
    {
      title && (
        <h2 class="text-3xl md:text-4xl font-semibold text-center mb-6 text-foreground">
          {title}
        </h2>
      )
    }

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto mt-2">
      <PortfolioList itemsCount={8}  includeNotes={false} centered={true}/>
    </div>

    <div class="mt-8 mb-8 flex items-center justify-center gap-3">
      <Button href={"/portfolio"} variant="primary" size="lg"
        >{"Preskúmať viac možností"}</Button
      >
    </div>
  </div>
</section>
